{
  "name": "aptos-extension",
  "displayName": "Aptos Extension",
  "description": "Supports the compilation, deployment, and testing of Aptos smart contracts, boosting development productivity in GitHub Codespaces. Enables unified management of frontend and backend development within a single repository.",
  "version": "0.0.28",
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "publisher": "zktxio",
  "homepage": "https://docs.zktx.io/vsce/aptos/",
  "repository": {
    "type": "git",
    "url": "https://github.com/zktx-io/aptos-extension"
  },
  "categories": [
    "Education",
    "Programming Languages",
    "Other"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#121919",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "browser": "./out/web/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extensionSidebarAptos",
          "title": "Aptos Extension",
          "icon": "media/icon-side.png"
        }
      ]
    },
    "views": {
      "extensionSidebarAptos": [
        {
          "id": "activitybarProviderAptos",
          "type": "webview",
          "name": "Aptos Extension"
        }
      ]
    },
    "commands": [
      {
        "command": "aptos-extension.openDocs",
        "title": "docs",
        "icon": {
          "dark": "media/docs-dark.svg",
          "light": "media/docs-light.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aptos-extension.openDocs",
          "when": "view == activitybarProviderAptos",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "move",
        "extensions": [
          ".move"
        ],
        "aliases": [
          "Move"
        ]
      }
    ]
  },
  "scripts": {
    "open-in-browser": "npm run build:all && vscode-test-web --extensionDevelopmentPath=. .",
    "build:all": "npm run build:webview && npm run compile",
    "install:all": "npm install && cd src/webview/activitybar && npm install",
    "start:webview": "cd src/webview/activitybar && npm run start",
    "build:webview": "cd src/webview/activitybar && npm run build",
    "test:webview": "cd src/webview/activitybar && npm run test",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write --ignore-path .gitignore .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/test-web": "^0.0.64",
    "eslint": "^8.57.0",
    "path-browserify": "^1.0.1",
    "prettier": "^3.3.3",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  }
}
